<div id="search_area" class="search_area">
	{{#unless needsPageGoBtn}}
		<img class="search_area__icon" src="{{icon}}" alt="🔍">
	{{/unless}}
	<input id="search_{{type}}" list="search_list_{{type}}" class="search_area__input">
	<datalist id="search_list_{{type}}"></datalist>
	{{#if needsPageGoBtn}}
		<button class='usual_button usual_button_dark search_area__go_btn' id='go_search_page_{{type}}' title='{{title}}'><img class="search_area__icon" src="{{iconWhite}}" alt="🔍"></button>
	{{/if}}
</div>

