<div class='header__wrapper'>
<div class='header__logo' id='logo-h'>
		<img src="{{logo}}" class="header__logo__img"/>
		<h2 class="header__logo__text">путешествия</h2>
	</div>

	<div class="right">
		{{#if isNotEmpty}}
			<div id="header-search-place" class="header__search_place"></div>
		{{/if}}

		{{#if isUser}}
			<div class='header__button header__button_no_hover'>
				<p class='usual_button usual_button_light' id='trip-block'>
					Создать поездку
				</p>
			</div>
		{{/if}}

		{{#if isNotEmpty}}
		<div
			class='header__button
			{{#unless isUser}}
				header__button_no_hover
			{{/unless}}
			'
			id='user-block'>
			{{#if isUser}}
				<div class="circle-img">
					<img src="{{avatarPath}}"/>
				</div>
				<p class='header__button__username'>{{name}}</p>
			{{else}}
<!--				<p class='header__button__login'>{{btnText}}</p>-->
				<p class='usual_button usual_button_light'>{{btnText}}</p>
			{{/if}}
		</div>
		{{/if}}
	</div>
</div>