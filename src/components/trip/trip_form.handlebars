<div class='frame'>
<form id="trip_form" class="trip_form">

		<div class="form_form__input_holder">
			{{#if tripCreated}}
			<div class='label-div'>
				<label for="title">Название поездки: {{title}}</label>
			</div>
			{{else}}	
			<div class='label-div'>
				<label for="title">Название поездки</label>
			</div>
			<input type="text" id="title" name="title" class="form__input" value="{{title}}"/>
			{{/if}}
		</div>

	<div class="trip_form__input_holder">
		<div class='label-div'>
			<label for="comment_text">Информация о поездке</label>
		</div>
		<div class="trip_form__input_holder__text">
			<div class="comment_text_hidden">
				<div class="textarea_behavior" id="comment_text_hidden">
				</div>
			</div>
			<textarea class="textarea_behavior" rows="3" id="comment_text">{{description}}</textarea>
		</div>
	</div>
	{{#if tripCreated}}
	<div id='trip-search-place'></div>
	{{!-- <div class="trip_form__horizontal_holder buttons_holder">
		<button class="usual_button usual_button_dark" id="btn-add-place">ТЕСТ</button>
	</div> --}}
	{{else}}
		<div>
	<button class="usual_button usual_button_dark" id='trip_submit'>Создать</button>
		</div>
	{{/if}}
	
	

	<div class="error_block" id="error_block">
		<p class="error_block__text">Ошибка. Обязательны название поездки и хотя бы одно место, которое вы собираетесь посетить</p>
	</div>


{{#if tripCreated}}
	<div class="trip_form__horizontal_holder buttons_holder">
		<button class="usual_button usual_button_dark" id="btn-add-album">Добавить альбом</button>
		<button class="usual_button usual_button_light" id="trip-submit">Сохранить поездку</button>
	</div>
</form>
{{else}}
{{/if}}
</div>

<div id="trip_cards_holder"></div>
<div id="trip_albums_holder"></div>

{{#if tripCreated}}
<div class="trip_form__horizontal_holder ">
	<div>
		<button id="ask_confirm_button" class="usual_button usual_button_light">Удалить поездку</button>
	</div>
	<div class="form_review__submit_holder__answer" id="form__submit_holder__answer">
		<p class="form_review__submit_holder__answer__text" >Вы уверены?</p>
		<button id="delete_button" class="usual_button usual_button_light">Да</button>
	</div>
</div>
{{else}}
{{/if}}
		