{{#if isEdit}}

{{#each sights}}
	{{#each this}}
		<div class='frame'>
			<h2 id="go_button_{{ this.sight.id }}_{{this.PP}}">{{ this.sight.name }}</h2>
			<img src="{{picture}}">
<!--			<p>✦ {{ this.sight.rating }}</p>-->
<!--			<p>Тэги: {{ this.sight.tags }}</p>-->
<!--			<p>{{ this.sight.photos }}</p>-->
<!--			<p>{{ this.sight.description }}</p>-->

			<div class="rating tag__holder">
				<!--				сложная верстка дробного значения рейтинга-->
				<span class="span__font__large span__font__large-green">✦</span><span class='rating__text'>{{sight.rating}}</span>
			</div>

			<div class="tag__holder">
				{{#each this.sight.tags}}
					<div class="tag card__tag card__tag__font">
						{{this}}
						{{#if @last}}
						{{else}}
							<span class="span__font__large span__font__large-blue">•</span>
						{{/if}}
					</div>
				{{/each}}
			</div>
			<p style='visibility: hidden'>no</p>
			<button
				id="delete_button_{{ this.sight.id }}_{{this.PP}}"
				class='usual_button_light usual_button'
			>удалить из поездки</button>

		</div>
	{{/each}}
{{/each}}

{{else}}

	{{#each sights}}
		{{#each this}}
			<div class='frame'>
				<h2 id="go_button_{{ this.sight.id }}_{{this.PP}}">{{ this.sight.name }}</h2>
				<img src="{{defaultPicture}}">
				<p>✦ {{ this.sight.rating }}</p>
				<p>Тэги: {{ this.sight.tags }}</p>

			</div>
		{{/each}}
	{{/each}}

{{/if}}