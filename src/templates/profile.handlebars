<div class='profile_wrapper'>
<div id='profile' class="profile frame">

    <div class="profile_show__photo" id="profile__photo">
        <img src="{{profile.profileImage}}" alt="avatar">
    </div>
    <div id="profile__metadata-holder" class="profile__metadata-holder">
        <div class="profile__data-holder">{{profile.meta.name}} {{profile.meta.surname}} </div>
        <div class="profile__data-holder profile__data-holder__email">{{profile.meta.email}} </div>
    </div>
    <div id="btn_block" class="profile__btn-block">
        <button id="profile__edit_btn" class="profile__edit-btn">Редактировать</button>
        <button id="profile__logout_btn" class="profile__close-btn">Выйти</button>
    </div>


	{{#if trips}}
		<div class='profile_show__trips frame_collection'>
			<div class='frame_collection__header'><p>Мои поездки</p></div>
			<div class='frame_collection__wrapper'>
				{{#each trips}}
					<div id="{{this.htmlId}}" class='frame_collection__card frame_collection__card_inline'>
						<div class='frame_collection__card__header'>{{this.title}}</div>
						<div class='frame_collection__card__text frame_collection__card__text_right'>{{this.description}}</div>
					</div>
				{{/each}}
			</div>
		</div>
	{{/if}}

	{{#if albums}}
		<div class='profile_show__albums frame_collection'>
			<div class='frame_collection__header'><p>Мои альбомы</p></div>
			{{#each albums}}
			<div id="{{this.htmlId}}" class='frame_collection__card'>
				<div class='frame_collection__card__header'>{{this.title}}</div>
				<div class='frame_collection__card__text'>{{this.description}}</div>
				<div class='profile_show__trips__photo_scroll' id='photo_scroll_{{this.htmlId}}'></div>
			</div>
			{{/each}}
		</div>
	{{/if}}
</div>
</div>
